@{
    Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h4>@Html.DisplayNameFor(m => m.Name) : @Html.DisplayFor(m => m.Name)</h4>
<h5>Date installed: @Html.DisplayFor(m => m.InstallationDate)</h5>

@if(@Model.JoinEntities.Count == 0){
    <p>This machine is not assigned to any engineer</p>
}

else 
{
    <h3>Engineer assigned to this machine: </h3>
    <ul>
    @foreach (EngineerMachine join in Model.JoinEntities){
        <li>@join.Engineer.Name</li>
    }
    </ul>
}

<p>@Html.ActionLink("Back to machine list", "Index")</p>
<p>@Html.ActionLink("Update", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete machine", "Delete", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Assign an Engineer", "AddEngineer", new { id = Model.MachineId })</p>
