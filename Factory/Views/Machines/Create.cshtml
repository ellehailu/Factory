@{
    Layout = "_Layout";
}

@model Factory.Models.Machine
<h4>Add a new Machine</h4>

@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })<br>
@using (Html.BeginForm()){
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>

@Html.ValidationMessageFor(model => model.InstallationDate, "", new { @class = "text-danger", @style = "font-weight: 600;" })<br>
    @Html.LabelFor(model => model.InstallationDate)
    @Html.TextBoxFor(model => model.InstallationDate, new { type="date"})
    

    <br><input type="submit" value="Add new machine"/>
}

<p>@Html.ActionLink("Show all machines", "Index")</p>